


<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
 <%= f.label :email %>
  <%= f.email_field :email %>

 <%= f.label :password %>
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%></br><label class="checkbox">
  
<%= f.check_box :remember_me %> <%= f.label :remember_me %>  </label>

  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

