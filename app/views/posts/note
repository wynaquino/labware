	 <% @num = 1%>	
	 <% for post in @group.posts %>	

		<div class="span1">
		  <p> <%= @num %> 

			<% if !post.link.blank? %>

				<a href="http://<%= post.link %>" i class="icon-share" target="_blank"></a>


			<% end %>

			</p>
		</div>	

		<div class="span6">

	 <h3 class="title"><%= link_to post.title, group_post_path(@group, post) %> </h3>
		  <p><small><%= distance_of_time_in_words_to_now(post.created_at)  %> ago by <%= link_to post.user.username, user_path(post.user) %> (+21 thumbs up/ <%= post.comment_threads.count %> comments)</small></p>	

		</div>
		 <% @num = @num + 1  %>

	<% end %>
